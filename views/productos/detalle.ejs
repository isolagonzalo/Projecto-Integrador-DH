«<!DOCTYPE html>
<html lang="es">
<!DOCTYPE html>
<html lang="en">

<!-- Include Head -->
<%- include('../partials/head', {title: '<%= producto.nombre %>'}) %>
<head>
	<link rel="stylesheet" href="/public/stylesheets/styleDetalleProducto.css">
	<link rel="stylesheet" href="/public/stylesheets/bootstrap-grid.min.css">
</head>
<body>
	<!-- Header -->
	<%- include('../partials/header') %>
	<!-- /Header -->

	<!-- product detail -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Detalle del producto: <%= producto.nombre %></h2>
			</div>
		</div>
		<div class="product-detail">
			<div class="row">
				<div class="col-12 col-lg-8">
					<img src="/images/products/<%= productos.image %>" alt="product image" class="product-detail-img">
					<p class="product-detail-description">
						<%= producto.descripcion %>
					</p>
				</div>
				<div class="col-12 col-lg-4">
					<article class="product-detail-info">
						<h2 class="product-detail-title"><%= producto.nombre %></h2>
						
							<p class="product-detail-price small">
								<span>$<%= producto.precio %></span>
								/
								<b><%= producto.descuento %>% OFF</b>
							</p>
							<p class="product-detail-price">
								$FINAL PRICE
							</p>
							<p class="product-detail-price">
								$PRICE
							</p>

						<ul class="actions-list">
							<li>
								<i class="fas fa-credit-card"></i>
								<p>Pagá en 12 cuotas sin interes</p>
							</li>
							<li>
								<i class="fas fa-store"></i>
								<p>Retiro gratis en locales del vendedor</p>
							</li>
						</ul>

						<a href="#" class="buy-now-button">COMPRAR AHORA</a>
						<hr>

						<a href="/products/editar/<%= producto.id %>" class="action-button edit">EDITAR PRODUCTO</a>
						<form action="/products/editar/<%= productos.id %>" method="POST" style="display: inline-flex">
							<button type="submit" class="action-button delete">ELIMINAR</button>
						</form>
					</article>
				</div>
			</div>
		</div>
	</div>
	<!-- /product detail -->

	<!-- footer -->
	<%- include('../partials/footer') %>
	<!-- /footer -->

</body>	
</html>