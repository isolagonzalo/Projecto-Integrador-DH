<!DOCTYPE html>
<html lang="en">
    <%- include('../partials/head', {title: 'Productos'}) %>
<body>
    <%- include('../partials/header', {title: 'Productos'}) %>
    <main>
        <div class="logoSuperior">
            <a href="/" class="logo-centro">
                <img src="/images/logos/corona-recorte.png" alt="">
                <h1 class="nombrePrincipal">Nacho Store</h1>
            </a>
        </div>
        <div class="container3">
            <div class="row">
                <div class="col s12">
                    <h1 class="center-align titulo">Categorías Principales</h1>

                    <div class="carousel center-align">
                        <div class="carousel-item">
                            <h2 class="subtitulo">Remeras</h2>
                            <div class="linea-division"></div>
                            <img src="/images/imagenesProductos/remeras.jpeg" alt="">
                        </div>

                        <div class="carousel-item">
                            <h2 class="subtitulo">Camperas</h2>
                            <div class="linea-division"></div>
                            <img src="/images/imagenesProductos/camperas.jpg" alt="">
                        </div>

                        <div class="carousel-item">
                            <h2 class="subtitulo">Jeans</h2>
                            <div class="linea-division"></div>
                            <img src="/images/imagenesProductos/jeans.jpg" alt="">
                        </div>

                        <div class="carousel-item">
                            <h2 class="subtitulo">Camisas</h2>
                            <div class="linea-division"></div>
                            <img src="/images/imagenesProductos/camisas.jpg" alt="">
                        </div>
                    </div>

                </div>
            </div>
        </div>

        <section>
            <h2>Productos Destacados</h2>
            <div class="articulos">
                <% for(var i = 0; i < productos.length; i++){ %>
                    <article> 
                        <div class="figure">  
                            <img src="/images/imagenesProductos/<%=productos[i].imagen%>" alt="">
                        </div>
                        <div class="descrip">
                            <p class="tipoProduc" name="nombre"><%=productos[i].nombre%></p>
                            <h4 class="precio">$<%=productos[i].precio%></h4>
                            <h4 class="cuotas" name="descuento"><%=productos[i].descuento%></h4>   
                        </div>
                    </article>
                <% } %>
            </div>  
        </section>
        <a href="/productos/crear"><Button>Crear Producto</Button></a>
    </main>


    <footer>
        <div class="container">
            <div class="lista">
                <nav class="centrar">
                    <h4>NAVEGACIÓN</h4>
                    <ul>
                        <li><a href="#">Inicio</a></li>
                        <li><a href="#">Productos</a></li>
                        <li><a href="#">Contacto</a></li>
                        <li><a href="#">Tabla de talles</a></li>
                        <li><a href="#">Como comprar</a></li>
                    </ul>
                </nav>

                <nav class="medios-pago centrar">
                    <h4>MEDIOS DE PAGO</h4>
                    <a href="#"><img src="/images/logos/medios-pago.png" alt=""></a>
                </nav>

                <nav class="contactanos centrar">
                    <h4>CONTACTANOS</h4>
                    <ul>
                        <li><a href="#">0341 4213906 / WhatsApp 3415030029 / Mayoristas 3416884200</a></li>
                        <li><a href="#">timiotul@outlook.com</a></li>
                        <li><a href="#">Calle Falsa 1234</a></li>
                    </ul>
                </nav>
            </div>
            <div class="seguinos">
                <h4>Seguinos</h4>
                <hr class="linea">
                <a href="#"><img src="/images/logos/facebook.png" alt=""></a>
                <a href="#"><img src="/images/logos/instagram-bosquejado.png" alt=""></a>
            </div>
        </div>
    </footer>


    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>

    <script src="/javascripts/scripts.js"></script>


</body>
</html>